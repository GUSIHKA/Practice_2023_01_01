<Window x:Class="OptOK.Views.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OptOK.Views"
        mc:Ignorable="d"
        Title="OOO 'OptOK'" Height="450" Width="800">
    <Grid Background="GhostWhite">
        <Border MinWidth="400" Margin="15" Background="White" VerticalAlignment="Center" Padding="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"></DropShadowEffect>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Регистрация" FontSize="16"></TextBlock>

                <Grid Margin="0 0 0 20">
                    <Button HorizontalAlignment="Left"></Button>
                    <Button HorizontalAlignment="Right"></Button>
                </Grid>

                <TextBlock x:Name="textBoxLogin" ></TextBlock>
            </StackPanel>
        </Border>

    </Grid>
</Window>
